<h1>Listing Users</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Username</th>
      <th>Plantclub</th>
      <th>Joined</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= link_to user.plantclub.name, user.plantclub %></td>
        <td> <%= user.created_at.strftime("%d.%m.%Y") %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

